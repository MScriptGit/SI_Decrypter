<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    
    xmlns:local="clr-namespace:SI_Decrypter"
    
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SI_Decrypter.WordPatternNL">
    <ScrollView
        x:Name="scrollView"
        Orientation="Vertical"
        VerticalOptions="FillAndExpand">
        <VerticalStackLayout
            Padding="20,0"
            Spacing="10">
            <Label
                x:Name="lbl"
                Text="Word Pattern Lookup"
                FontSize="Large"
                VerticalOptions="Center"
                HorizontalOptions="Center" />
            <Border
                Stroke="#00CC00"
                StrokeThickness="2"
                BackgroundColor="White"
                Padding="5">
                <Border.StrokeShape>
                    <RoundRectangle
                        CornerRadius="10.0" />
                </Border.StrokeShape>
                <Entry
                    x:Name="userInput"
                    Placeholder="Input here..."
                    PlaceholderColor="black"
                    TextColor="black" />
            </Border>
            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span
                            Text="Input dots and numbers for unknown letters." />
                        <Span
                            Text="&#xA;" />
                        <Span
                            Text="Same numbers are same letters." />
                        <Span
                            Text="&#xA;" />
                        <Span
                            Text="IE for " />
                        <Span
                            Text="'apple' "
                            FontAttributes="Bold" />
                        <Span
                            Text="type " />
                        <Span
                            Text=".11.. "
                            FontAttributes="Bold" />
                        <Span
                            Text="use a dot for unknown letters (" />
                        <Span
                            Text="apple "
                            FontAttributes="Bold" />
                        <Span
                            Text="&gt; " />
                        <Span
                            Text="a11.."
                            FontAttributes="Bold" />
                        <Span
                            Text=")" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Button
                Text="Let's go!"
                Clicked="getEntry"
                BackgroundColor="#00CC00" />
            <Label
                x:Name="outputTxt" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>