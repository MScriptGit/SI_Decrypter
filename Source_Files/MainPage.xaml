<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    
    xmlns:local="clr-namespace:SI_Decrypter"
    
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SI_Decrypter.MainPage">
    <VerticalStackLayout
        Padding="20,0"
        Spacing="10">
        <Button
            Text="Bruteforce Rotation Decrytper"
            Clicked="BruteforceRotationDecrypter"
            BackgroundColor="#00CC00" />
        <Button
            Text="Character Counter"
            Clicked="CharacterCounter"
            BackgroundColor="#00CC00" />
        <Button
            Text="Word Lookup (Dutch only)"
            Clicked="WordLookup"
            BackgroundColor="#00CC00" />
        <Button
            Text="Word Pattern Lookup (Dutch only)"
            Clicked="WordPatternLookup"
            BackgroundColor="#00CC00" />
        <Button
            Text="Word Starts With... (Dutch only)"
            Clicked="WordStartsWith"
            BackgroundColor="#00CC00" />
        <Button
            Text="Word Ends With... (Dutch only)"
            Clicked="WordEndsWith"
            BackgroundColor="#00CC00" />
        <Button
            Text="Number Sequence Analyzer"
            Clicked="NumberSequenceAnalyzer"
            BackgroundColor="#00CC00" />
        <Button
            Text="Columnar Shift"
            Clicked="ColumnarShift"
            BackgroundColor="#00CC00" />
    </VerticalStackLayout>
</ContentPage>